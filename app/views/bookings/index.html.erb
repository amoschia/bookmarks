<!-- ADMIN SETTINGS -->
<% if can? :update, @config %>
<table class="table">
	   <h3>Bookings</h3>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
	  <th>End time</th>
      <th>Group size</th>
      <th>Room size</th>
      <th>Controls</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.name %></td>
        <td><%= booking.start_time %></td>
		<td><%= booking.end_time %></td>
        <td><%= booking.groupsize %></td>
        <td><%= booking.roomsize %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path, :class=>"btn btn-primary" %>
<% else %>
you cannot access this
<% end %>
<!-- END OF ADMIN SETTINGS -->