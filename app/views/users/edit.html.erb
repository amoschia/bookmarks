
<h3>Editing <%= @user.email %></h3>
<div class="authentication">
<%= form_for(resource, as: resource_name, :url => {:action => "update", class: "form-horizontal", role: "form"}, html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  

  <div class="form-group"><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %></div>

  <div class="form-group"><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %></div>

  <div class="form-group"><%= f.label :role %><br />
	<%= f.collection_select :role, User::ROLES, :to_s, :humanize,{}, {class: 'form-control'} %></div>
  <div><%= f.submit "Update", :class => 'btn btn-info btn-block' %></div>
<% end %>
<h3>Cancel this account</h3>

<p><%= button_to "Cancel this account", {:action => "update"}, :class => 'btn btn-danger btn-block', data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back, :class => 'btn btn-primary btn-block' %>
</div>