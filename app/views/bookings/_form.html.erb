<%= form_for(@booking) do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% @booking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :groupsize %><br>
    <%= f.number_field :groupsize %>
  </div>
  <div class="field">
    <%= f.label :roomsize %><br>
    <%= f.select :roomsize, options_for_select([["Select One", ""], "Small", "Medium", "Large"]), :class => '' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
