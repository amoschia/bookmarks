<header>
<h2> Welcome to Bookmarks </h2>
<nav class="navbar navbar-default" role="navigation">
   <div class="navbar-header">
      <a class="navbar-brand" href="/">TutorialsPoint</a>
   </div>
   <div>
      <ul class="nav navbar-nav">
		<li><%= link_to "Todo", todo_path(@todo) %></li>
         <li><%= link_to "Calendar", calendar_path(@calendar) %></li>
         <li class="dropdown active">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">
				   Admin <b class="caret"></b>
				</a>
				<ul class="dropdown-menu">
				   <li><%= link_to "Admin", admin_path(@admin) %></li>
				   <li><%= link_to "Bookings", bookings_path(@bookings) %></li>
				</ul>
			</li>
      </ul>
   </div>
   
	<div id="authpanel">
	<%= render 'users/menu/auth_items' %>
	</div>
</nav>
</header>
<!-- ADMIN SETTINGS -->
<% if can? :update, @config %>
    <table class="table">
	   <h3>Admin Settings</h3>
	   <thead>
		  <tr>
			 <th>Email</th>
			 <th>Password</th>
			 <th>Role</th>
		  </tr>
	   </thead>
	   <tbody>
			<% @users.each do |user| %>
			    <tr>
				   <td><%= user.email %></td>
				   <td><%= link_to "Edit", edit_user_path(user) %></td>
				   <td><%= user.role %></td>
			    </tr>
		    <% end %>
	   </tbody>
	</table>  
   </div>
</div>

<% else %>
you cannot access this
<% end %>
<!-- END OF ADMIN SETTINGS -->